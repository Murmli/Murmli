# iOS
for_platform :ios do
  app_identifier("com.boundfoxstudios.murmli") # The bundle identifier of your app
  apple_id(ENV["APPLE_ID_EMAIL"]) # Your Apple Developer Portal username

  itc_team_id(ENV["APPLE_APP_STORE_CONNECT_TEAM_ID"]) # App Store Connect Team ID
  team_id(ENV["APPLE_DEVELOPER_PORTAL_TEAM_ID"]) # Developer Portal Team ID
end

# Android
for_platform :android do
  package_name("de.murmli.twa")
end

